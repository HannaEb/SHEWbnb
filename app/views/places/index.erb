<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<h1> Book a place </h1>
 <% unless @places.empty? %>
<ul id='places'>
    <% @places.each do |place| %>
    <li>
      Name: <%= place.name %> Description: <%= place.description %> Price: <%= place.price %>
      <ul id='availabilities'>
        <%  Availability.all(:place_id => place.id).each do |availability| %>
        <li>
        Start date: <%= availability.start_date %>
        End date: <%= availability.end_date %>
        </li>
        <% end %>
      </ul>
      <% if !place.booked %>
      <form action="/requests/new" method="post">
        <input type="hidden" name="id" value="<%= place.id %>">
        <input type="hidden" name="username" value="<%= place.username %>">
        <button type="submit" name="Book" >Request to Book</button>
      </form>
      <% else %>
      This place is unavailable
      <% end %>
      </li>
    <% end %>
</ul>
<% else %>
No spaces here!
<% end %>
<form action="/places/new">
  <button type="submit" name="Add new place">Add new place</button>
</form>
<form method='post' action='/requests/sent'>
  <input type='hidden' name='id' value='<%= current_user.id %>'>
  <input type='submit' value='View sent requests'>
</form>
<form method='post' action='/requests/received'>
  <input type='hidden' name='username' value='<%= current_user.username %>'>
  <input type='submit' value='View received requests'>
</form>
<form method='get' action='/places/manage'>
  <input type='hidden' name='id' value='<%= current_user.id %>'>
  <input type='submit' value='Manage my places'>
</form>

  </body>
</html>
